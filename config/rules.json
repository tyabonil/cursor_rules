{
  "rules": {
    "level1_security": {
      "checks": {
        "secrets_detection": {
          "patterns": [
            "api[_-]?key\\s*[=:]\\s*['\"][A-Za-z0-9]{16,}['\"]",
            "password\\s*[=:]\\s*['\"](?<!test|mock|fake|example|password|123)\\\\w{8,}['\"]",
            "(?<!\\\\w)token\\s*[=:]\\s*['\"]\\\\w+['\"](?!\\\\s*[?@])",
            "secret\\s*[=:]\\s*['\"](?!test|mock|fake|example|secret)\\\\w{8,}['\"]",
            "auth[_-]?token\\s*[=:]\\s*['\"][A-Za-z0-9]{16,}['\"]",
            "access[_-]?key\\s*[=:]\\s*['\"][A-Za-z0-9]{16,}['\"]",
            "private[_-]?key\\s*[=:]\\s*['\"](?!test|mock|fake|example|private_key)-----BEGIN"
          ]
        },
        "env_files_protection": {
          "patterns": [
            "\\.env$",
            "\\.env\\.",
            "environment"
          ]
        }
      }
    },
    "level2_workflow": {
      "checks": {
        "issue_reference": {
          "patterns": [
            "#\\d+",
            "issue\\s+\\d+",
            "fixes?\\s+#?\\d+"
          ]
        },
        "branch_naming": {
          "required_patterns": [
            "^feature\\/issue-\\d+-[\\w-]+$",
            "^bugfix\\/issue-\\d+-[\\w-]+$",
            "^hotfix\\/issue-\\d+-[\\w-]+$"
          ]
        },
        "token_efficiency": {
          "max_files_per_pr": 50
        }
      }
    }
  }
}