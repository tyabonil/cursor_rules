{
  "name": "mandatory-rules-checker",
  "version": "1.0.0",
  "description": "Automated compliance checker for MANDATORY-RULES.md validation",
  "main": "scripts/rule-engine.js",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "lint": "eslint scripts/ tests/",
    "lint:fix": "eslint scripts/ tests/ --fix",
    "validate": "node scripts/validate-config.js",
    "docs": "node scripts/generate-docs.js"
  },
  "keywords": [
    "mandatory-rules",
    "compliance",
    "github-actions",
    "pr-validation",
    "security",
    "workflow"
  ],
  "author": "tyabonil",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1",
    "marked": "^16.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!scripts/validate-config.js",
      "!scripts/generate-docs.js",
      "!hooks/**/*.sh"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "error",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tyabonil/cursor_rules.git"
  },
  "bugs": {
    "url": "https://github.com/tyabonil/cursor_rules/issues"
  },
  "homepage": "https://github.com/tyabonil/cursor_rules#readme"
}
