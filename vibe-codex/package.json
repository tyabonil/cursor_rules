{
  "name": "vibe-codex",
  "version": "2.0.0",
  "description": "Interactive configuration and rule management for development workflows",
  "keywords": [
    "vibe-codex",
    "development-workflow",
    "linting",
    "testing",
    "ci-cd",
    "git-hooks",
    "code-quality",
    "modular-rules",
    "devops",
    "automation",
    "workflow"
  ],
  "homepage": "https://github.com/tyabonil/vibe-codex",
  "bugs": {
    "url": "https://github.com/tyabonil/vibe-codex/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyabonil/vibe-codex.git"
  },
  "license": "MIT",
  "author": "Ty Yabonil",
  "main": "lib/index.js",
  "bin": {
    "vibe-codex": "./bin/vibe-codex.js"
  },
  "files": [
    "bin/",
    "lib/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "lint": "eslint lib test",
    "lint:fix": "eslint lib test --fix",
    "format": "prettier --write \"lib/**/*.js\" \"test/**/*.js\"",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags",
    "postinstall": "node lib/installer/post-install.js || true"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}